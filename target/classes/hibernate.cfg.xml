<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
    
<hibernate-configuration>
    
    <session-factory>
     	<property name="hbm2ddl.auto">update</property>
 		<mapping class="com.bookstore.domain.LoginInfo"/>
		<mapping class="com.bookstore.domain.Registration"/>
		<mapping class="com.bookstore.domain.UserRole"/>
		<mapping class="com.bookstore.domain.Persistent_Logins"/>
		<mapping class="com.bookstore.domain.Category"/>
		<mapping class="com.bookstore.domain.Product"/>
		<mapping class="com.bookstore.domain.ProductImage"/>
		<mapping class="com.bookstore.domain.Attribute"/>
		<mapping class="com.bookstore.domain.AttributeValue"/>
		<mapping class="com.bookstore.domain.ProductAttribute"/>
		<mapping class="com.bookstore.domain.Customer"/>
		<mapping class="com.bookstore.domain.CustomerAddress"/>
		<mapping class="com.bookstore.domain.Basket"/>
		<mapping class="com.bookstore.domain.OrderItem"/>
		<mapping class="com.bookstore.domain.ProductOrder"/>
		<mapping class="com.bookstore.domain.Review"/>
		
		
    </session-factory>
    
</hibernate-configuration>